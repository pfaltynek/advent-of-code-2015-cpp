{
	"version": "0.1.0",
	"command": "Build",
	"args": [
		"${fileBasename}"
	],
	"isShellCommand": true,
	"tasks": [
		{
			"taskName": "Build",
			"isBuildCommand": true,
			"showOutput": "always",
			"args": [
				"all"
			],
			"problemMatcher": {
				"owner": "cpp",
				"severity": "info", // treat note as info
				"fileLocation": "absolute",
				"pattern": {
					"regexp": "^(.*)\\((\\d+)\\):\\s+(warning|error|note)\\s*(\\w+)?:\\s+(.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"code": 4,
					"message": 5
				}
			}
		}
	]
}